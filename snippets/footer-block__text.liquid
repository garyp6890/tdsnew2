<div class="{% if block.settings.title != blank %}m-accordion--item-content{% endif %} m-footer--block-content">
  {% if block.settings.image != blank %}
    {% assign alt = block.settings.image.alt | default: shop.name | escape %}
    <div class="block-image" style="max-width: {{ block.settings.image_max }}">
      {% render 'responsive-image', image: block.settings.image, alt: alt %}
    </div>
  {% endif %}
  {% if block.settings.description != blank %}
    <div class="block-text">
      {{ block.settings.description }}
    </div>
  {% endif %}
</div>
