

{% comment %} Section layout style {% endcomment %}
{{ 'tpt-section.css' | asset_url | stylesheet_tag }}

{% comment %} Section configuration {% endcomment %}
{%- render 'tpt-section-setting', section: section -%}

{%- if section.index and section.settings.section_lazyload -%}
  <script src="{{ 'tpt-section-lazyload.js' | asset_url }}" defer="defer"></script>

  <tpt-section-lazyload data-url="?section_id={{ section.id }}">
    <div data-lazyload-element></div>
    <span class="tpt-section_loader"></span>
  </tpt-section-lazyload>
{%- else -%}
  {% comment %} Grid style {% endcomment %}
  {{ 'tpt-grid.css' | asset_url | stylesheet_tag }}

  {% comment %} Current section style {% endcomment %}
  {{ 'tpt-collection-list-4.css' | asset_url | stylesheet_tag }}

  {%- liquid
    if section.settings.section_full_width and section.settings.content_full_width
      assign content_width = '100vw'
    else
      assign content_width = section.settings.content_max_width | append: 'px'
    endif

    assign desktop_column = section.settings.desktop_column
    assign tablet_column = section.settings.tablet_column
    assign mobile_column = section.settings.mobile_column
  -%}

  {%- capture sizes -%}
    (min-width: 1281px) calc({{ content_width }} / {{ desktop_column }}), (min-width: 768px) calc(100vw / {{ tablet_column }}), 100vw
  {%- endcapture -%}

  <div class="tpt-section_container color-{{ section.settings.color_scheme }} gradient">
    <div class="tpt-section_content">
      {% comment %} Section header {% endcomment %}
      {%- render 'tpt-section-header', section: section -%}

      <div class="tpt-section-body">
        {% comment %} Section body {% endcomment %}
        <div
          class="tpt-collection-list-4"
        >
          <div class="tpt-collection-list-4__collection-container tpt-grid desktop-{{ desktop_column }}-columns tablet-{{ tablet_column }}-columns mobile-{{ mobile_column }}-columns">
            {%- for block in section.blocks -%}
              <div class="tpt-collection-list-4__collection-item item-{{ forloop.index }} tpt-grid_item">
                <div class="tpt-collection-list-4__collection-item-image-wrapper">
                  <a href="{{ block.settings.collection.url }}">
                    {% if block.settings.collection_image != blank %}
                      {%- assign image_alt = block.settings.item_image.alt | default: shop.name -%}
                      <div class="tpt-collection-list-4__collection-item-image-wrapper">
                        {{
                          block.settings.collection_image
                          | image_url: width: 3840
                          | image_tag:
                            sizes: sizes,
                            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                            loading: 'lazy',
                            alt: image_alt
                          | default: shop.name
                        }}
                      </div>
                    {% else %}
                      {% if block.settings.collection.featured_image != blank %}
                        {%- assign image_alt = block.settings.collection.featured_image.alt | default: shop.name -%}
                        <div class="tpt-collection-list-4__collection-item-image-wrapper">
                          {{
                            block.settings.collection.featured_image
                            | image_url: width: 3840
                            | image_tag:
                              sizes: sizes,
                              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                              loading: 'lazy',
                              alt: image_alt
                            | default: shop.name
                          }}
                        </div>
                      {%- else -%}
                        {%- render 'tpt-image-placeholder' -%}
                      {%- endif -%}
                    {% endif %}
                  </a>
                </div>

                {%- if block.settings.collection != blank -%}
                  <div class="tpt-collection-list-4__collection-item-info tpt-section__foreground--color">
                    <p class="tpt-collection-list-4__collection-item-title">
                      <a href="{{ block.settings.collection.url }}">
                        {% if block.settings.collection_name != blank -%}
                          {{- block.settings.collection_name -}}
                        {%- else -%}
                          {{- block.settings.collection.title -}}
                        {%- endif %}
                      </a>
                    </p>
                  </div>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        </div>
        {% comment %} End section body {% endcomment %}
      </div>

      {% comment %} Section footer {% endcomment %}
      {%- render 'tpt-section-footer', section: section -%}
    </div>
  </div>
{%- endif -%}{%- unless content_for_header contains 'tapita-section-script-tags' -%}{% style %}#shopify-section-{{ section.id }}{display: none !important;}{% endstyle %}{%- endunless -%}
