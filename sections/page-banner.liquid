{% comment %}
  Page Banner Template â€“ Final Version
  Designed for static pages (e.g., About Us) to mimic the collection banner,
  but with a smaller, centered H1 and breadcrumbs left-aligned underneath.
{% endcomment %}

<!-- Header Section -->
<div class="container mx-auto px-4 py-6 text-center">
  {% if section.settings.show_title %}
    <h1 class="text-3xl font-bold text-gray-900 mx-auto">
      {% if section.settings.custom_h1 != blank %}
        {{ section.settings.custom_h1 }}
      {% else %}
        {{ page.title }}
      {% endif %}
    </h1>
    {% if section.settings.custom_subtitle != blank %}
      <h3 class="text-xl font-medium text-gray-700 mt-2 mx-auto">
        {{ section.settings.custom_subtitle }}
      </h3>
    {% endif %}
  {% endif %}
</div>

<!-- Breadcrumbs Section (left-aligned, beneath header) -->
{% if section.settings.show_breadcrumb %}
  <div class="container mx-auto px-4 mt-2 text-left ml-2">
    {% render 'breadcrumb', container: 'container' %}
  </div>
{% endif %}

<!-- Page Content Section -->
<div class="container mx-auto px-4 mt-6">
  <div class="bg-white shadow-md rounded-lg p-6">
    <div class="page-content rte leading-relaxed">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Page Title",
      "default": true
    },
    {
      "type": "text",
      "id": "custom_h1",
      "label": "Custom Page H1",
      "default": "Default Page Title"
    },
    {
      "type": "text",
      "id": "custom_subtitle",
      "label": "Custom Subtitle",
      "default": "Custom Subtitle" 
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumb",
      "label": "Show Breadcrumb",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Page Banner"
    }
  ]
}
{% endschema %}
