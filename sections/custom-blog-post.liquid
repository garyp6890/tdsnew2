  "name": "Blog Post Content",
  "tag": "section",
  "settings": [
    {
      "type": "article",
      "id": "article",
      "label": "Article"
    }
  ],
  "presets": [
    {
      "name": "Blog Post Content"
    }
  ]
}
{% endschema %}