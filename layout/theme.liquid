{% liquid
  assign enable_rtl = settings.enable_rtl
  assign language_support_rtl = settings.language_support_rtl
  if enable_rtl and language_support_rtl != blank
    assign shop_locale = localization.language.iso_code
    assign language_support_rtl_list = language_support_rtl | split: ','
    assign is_rtl = language_support_rtl_list | where: shop_locale
    if is_rtl.size > 0
      assign enable_rtl = true
    else
      assign enable_rtl = false
    endif
  endif

  assign body_classes = 'template-' | append: template.name | append: ' ' | append: template.suffix | append: ' m-gradient m-color-' | append: settings.default_color_scheme
  if settings.page_transition
    assign body_classes = body_classes | append: ' m:overflow-hidden'
  endif
  if template.suffix == 'about-us'
    assign body_classes = body_classes | append: ' sf__page-about'
  endif
%}
<!doctype html>
<html
  class="no-js {% if settings.page_transition %} m:overflow-hidden{% endif %}"
  lang="{{ request.locale.iso_code }}"
  data-template="{{ template.name }}"
  {% if enable_rtl %}
    dir="rtl"
  {% endif %}
>
  <head>
 {%- if content_for_header contains 'tapita-seo-script-tags' -%}{%- include 'tapita-seo-schema' -%}{%- endif -%} 

    {{ content_for_header }}
    
    {% if template.name != 'index' %}
      <!-- https://apps.shopify.com/social-preview-builder preview builder app extension first part start -->
      {% assign preview_builder_today_date = 'now' | date: '%s' %}
      {% assign preview_builder_paid_until_date = shop.metafields.beautycards.paid_until | date: '%s' %}
      {% if product and preview_builder_today_date < preview_builder_paid_until_date %}
        {% assign page_image = nil %} <!-- disable duplicate for images for imessage -->
        {%- assign preview_builder_image_data_hash = product.description | append: product.featured_image | append: product.price_max | append: product.price_min | product.title | md5  -%}
        {% assign preview_builder_image_url = "//cdnsp.previewbuilder.com/p/" | append: shop.id | append: '/' | append: product.id | append: '.png?v=' | append: preview_builder_image_data_hash %}
        <meta property="og:image" content="http:{{preview_builder_image_url}}">
        <meta property="og:image:secure_url" content="https:{{ preview_builder_image_url }}">
        <meta property="og:image:width" content="{{ 1200 }}">
        <meta property="og:image:height" content="{{ 628 }}">
        <meta property="twitter:image" content="https:{{ preview_builder_image_url }}">
        <meta property="twitter:card" content="summary_large_image">
      {% endif %}
      <!-- preview builder app extension first part end -->
    {% endif %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=0">
    <meta name="theme-color" content="{{ settings.color_primary }}">

    {%- liquid
      render 'preload'
      render 'SEO'
      render 'font-face'
    -%}

    {% render 'critical-css' %}

    {{ 'main.css' | asset_url | stylesheet_tag }}

    {% render 'style-tags' %}

    <script src="{{ 'vendor.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'theme-global.js' | asset_url }}" defer="defer"></script>
    {%- if settings.animations != 'none' -%}
      <script src="{{ 'animations.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}
    {%- if request.design_mode -%}
      <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}


    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
    </script>
    {% render 'theme-data' %}
    {% render 'custom-code-head' %}
    
    <script src="https://code.jquery.com/jquery-3.6.3.js"></script> 
    
    {% if template.name != 'index' %}
      <!-- https://apps.shopify.com/social-preview-builder preview builder app extension second part start-->
      {% assign preview_builder_today_date = 'now' | date: '%s' %}
      {% assign preview_builder_paid_until_date = shop.metafields.beautycards.paid_until | date: '%s' %}
      {% if product and preview_builder_today_date < preview_builder_paid_until_date %}
        {%- assign preview_builder_image_data_hash = product.description | append: product.featured_image | append: product.price_max | append: product.price_min | product.title | md5  -%}
        {% assign preview_builder_image_url = "//cdnsp.previewbuilder.com/p/" | append: shop.id | append: '/' | append: product.id | append: '.png?v=' | append: preview_builder_image_data_hash %}
        <meta property="og:image" content="http:{{preview_builder_image_url}}">
        <meta property="og:image:secure_url" content="https:{{ preview_builder_image_url }}">
        <meta property="og:image:width" content="{{ 1200 }}">
        <meta property="og:image:height" content="{{ 628 }}">
        <meta property="twitter:image" content="https:{{ preview_builder_image_url }}">
        <meta property="twitter:card" content="summary_large_image">
      {% endif %}
      <!-- preview builder app extension second part end-->
    {% endif %}

  {% render 'shogun-head' %}
</head>

  <body
    id="m-theme"
    class="{{ body_classes }}"
    {% if template.name == 'product' %}
      data-product-id="{{ product.id }}"
    {% endif %}
  >
    {% render 'page-transition' %}
    {%- liquid
      render 'scroll-top-button'
      sections 'header-group'
    -%}

    <main role="main" id="MainContent">
      {{ content_for_layout }}
    </main>

    {%- sections 'footer-group' -%}

    {% render 'script-tags' %}
    {% render 'cookie-banner' %}
    {% render 'custom-code-body' %}

    <script src="{{ 'product-quick-view.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'wishlist.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'compare-product.js' | asset_url }}" defer="defer"></script>

    {%- if settings.enable_predictive_search -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {%- if linklists['gift-wrapping'].links != blank
      and linklists['gift-wrapping'].links.first.type == 'product_link'
    -%}
      <script src="{{ 'gift-wrapping.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {%- if settings.show_swatch_option -%}
      <script src="{{ 'product-card-swatch.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {%- if settings.enable_cart_drawer and template != 'cart' -%}
      {% render 'cart-drawer' %}
    {%- endif -%}
    {% render 'mws-bundle-helper' %}
  </body>